<div class="d-flex justify-content-center align-items-center min-vh-100">
  <div class="col-md-6">
    <h2 class="text-center mb-4">Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <!-- Error Messages -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email Field -->
      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <!-- Pending Confirmation -->
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="alert alert-warning">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <!-- Password Field -->
      <div class="form-group">
        <%= f.label :password, class: "form-label" %> 
        <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <!-- Password Confirmation Field -->
      <div class="form-group">
        <%= f.label :password_confirmation, class: "form-label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <!-- Current Password Field -->
      <div class="form-group">
        <%= f.label :current_password, class: "form-label" %> 
        <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <!-- Update Button -->
      <div class="form-group text-center">
        <%= f.submit "Update", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <!-- Cancel Account Section -->
    <h3 class="mt-5 text-center">Cancel my account</h3>
    <div class="text-center">
      <%= button_to "Cancel my account", registration_path(resource_name), 
          data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, 
          method: :delete, class: "btn btn-danger" %>
    </div>

    <!-- Back Link -->
    <div class="text-center mt-3">
      <%= link_to "Back", :back, class: "btn btn-secondary" %>
    </div>
  </div>
</div>

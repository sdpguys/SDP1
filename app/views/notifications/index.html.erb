<h1 style="text-align: center; margin-bottom: 30px; font-size: 28px;">Your Notifications</h1>

<% if @notifications.any? %>
  <ul style="list-style-type: none; padding: 0;">
    <% @notifications.each do |notification| %>
      <li style="border: 1px solid #ddd; border-radius: 8px; padding: 20px; margin-bottom: 15px; background-color: #f9f9f9;">
        <h3 style="font-size: 22px; color: #333; font-weight: bold;"><%= notification.title %></h3>
        <p style="font-size: 16px; color: #555; margin-bottom: 15px;"><%= notification.message %></p>
        <%= link_to 'Show', notification_path(notification), method: :delete, data: { confirm: 'Are you sure you want to delete this notification?' }, style: 'color: red; font-weight: bold;' %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p style="text-align: center; font-size: 18px; color: #555;">You have no notifications.</p>
<% end %>

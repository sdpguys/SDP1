<div class="container my-5">
  <h1 class="text-center mb-4">Edit User</h1>

  <%= form_with(model: @user, url: admin_user_path(@user), method: :patch, html: { class: 'needs-validation' }) do |form| %>
    
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <h4 class="alert-heading">Errors:</h4>
        <ul class="mb-0">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :email, class: 'form-label' %>
      <%= form.text_field :email, class: 'form-control' %>
    </div>

    <div class="mb-3 form-check">
      <%= form.check_box :admin, class: 'form-check-input' %>
      <%= form.label :admin, "Is Admin?", class: 'form-check-label' %>
    </div>

    <div class="mb-3">
      <%= form.submit "Update User", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= link_to "Back to Users", admin_users_path, class: 'btn btn-secondary' %>
</div>

<div class="container my-5">
  <h1 class="text-center mb-4">Registered Users</h1>

  <table class="table table-bordered table-striped">
    <thead class="table-light">
      <tr>
        <th title="Email">Email</th>
        <th title="Admin Status">Admin Status</th>
        <th>Created At</th>
        <th>Last Login</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.admin? ? "Yes" : "No" %></td>
          <td><%= user.created_at.strftime("%B %d, %Y") %></td>
          <td><%= user.current_sign_in_at ? user.current_sign_in_at.strftime("%B %d, %Y") : "Never" %></td>
          <td class="d-flex justify-content-start">
            <%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-outline-warning btn-sm me-2" %>
            <%= button_to "Delete", admin_user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this user?" }, class: "btn btn-outline-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
